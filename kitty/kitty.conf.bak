# include the theme configuration file
include themes/Doom-One.conf

# << Appearance Settings >>
# background opacity
background_opacity 0.7

# font settings
text_composition_strategy legacy

# font_family      family="BlexMono Nerd Font Mono"
font_family      family="GeistMono Nerd Font Mono"

font_size 14.0
modify_font cell_height 100%

# ligatures
disable_ligatures false

# URL settings
detect_urls yes
undercurl_style thin-dense
underline_hyperlinks hover

# << Caret Appearance Settings >>
# cursor_shape block
cursor_shape beam
cursor_blink_interval 0
shell_integration no-cursor
cursor_trail 0


# << Mouse Settings >>
# hide mouse cursor ( immediately )
mouse_hide_wait -1

# copy on mouse selection
copy_on_select yes


# << Miscellaneous >>
# kitty can be controlled via command remotely
allow_remote_control yes
# listens for incoming remote control commands
listen_on unix:/tmp/kitty
