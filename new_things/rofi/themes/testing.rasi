// padding: top right bottom left;
* {
    BG: #0D0E11;
    FG: #DEE4DF;
    SoftGray: #919191;
    Black: #000000;
    Cursor: #797F87;
    DarkGray: #43494D;
    Gray: #5C656A;
    DarkRed: #E62D2D;
    Red: #FD2121;
    DarkGreen: #7C9F34;
    Green: #80B918;
    DarkYellow: #E8AA32;
    Yellow: #FFCE1F;
    DarkBlue: #3D8CC4;
    Blue: #2B87FF;
    DarkPurple: #A765CC;
    Purple: #A14FE9;
    DarkCyan: #21798A;
    Cyan: #2DA2BA;
    DarkWhite: #AAAAAA;
    White: #CCCCCC;

    // font: "Liga SFMonoNerdFont 14";
    font: "Arimo Nerd Font 14";

    margin: 0;
    padding: 0;
    spacing: 0;

    background-color: transparent;
    text-color: @FG;
}

window {
    location: center;
    width: 600px;
    transparency: "real";
    background-color: rgba (13, 14, 17, 55 %);
    // border: 1px;
    // boder-radius: 12px;
    // border-color: #343535;
}

mainbox {
    padding: 10px 10px 10px 10px;
}

inputbar {
    padding: 20px 2px 20px 2px;
    children: [prompt, entry, case-indicator];
}

prompt {
    text-color: @DarkGray;
}

entry {
    placeholder: "Search Applications";
    placeholder-color: @DarkGray;
}

listview {
    columns: 1;
    lines: 8;
    dynamic: true;
    cycle: true;
    background-color: rgba (92, 101, 106, 5%);
    border-radius: 12px;
    padding: 8px;
}

element {
    // padding: 12px;
    text-color: red;
    highlight: green;
    border-radius: 5px;
}

element selected {
  background-color: red;
  text-color: white;
}

element urgent, element selected urgent {
  text-color: red;
}

element active, element selected active {
  text-color: lime;
}
